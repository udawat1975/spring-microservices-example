pipeline {
    agent any
    stages {
        stage('Build Application') {
            steps {
                dir('product-service') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('product-service') {
                    sh 'docker build -t product-service:latest .'
                }
            }
        }
        stage('Load Image into Minikube') {
            steps {
                sh 'minikube image load product-service:latest'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                // Load the 'kubeconfig-secret-text' credential into a variable
                withCredentials([string(credentialsId: 'kubeconfig-secret-text', variable: 'KUBECONFIG_CONTENT')]) {
                    
                    // Write the content of that variable to a temporary file in the workspace
                    writeFile file: 'kubeconfig.tmp', text: KUBECONFIG_CONTENT
                    
                    // Use that temporary file as the config for all commands inside this block
                    withEnv(["KUBECONFIG=${env.WORKSPACE}/kubeconfig.tmp"]) {
                        dir('product-service') {
                            sh 'kubectl apply -f product-service-deployment.yaml'
                        }
                    }
                }
            }
        }
    }
}
