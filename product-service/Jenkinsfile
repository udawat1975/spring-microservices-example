pipeline {
    agent any
    stages {
        stage('Build Application') {
            steps {
                dir('product-service') {
                    // Add this line to make the script executable
                    sh 'chmod +x mvnw'
                    // Now run the build
                    sh './mvnw clean package'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('product-service') {
                    sh 'docker build -t product-service:latest .'
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                dir('product-service') {
                    sh 'kubectl apply -f product-service-deployment.yaml'
                }
            }
        }
    }
}
