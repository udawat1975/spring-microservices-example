pipeline {
    agent any
    stages {
        stage('Build Application') {
            steps {
                // Change into the product-service directory first
                dir('product-service') {
                    sh './mvnw clean package'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                // Change directory here as well
                dir('product-service') {
                    sh 'docker build -t product-service:latest .'
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                // And here, to find the .yaml file
                dir('product-service') {
                    sh 'kubectl apply -f product-service-deployment.yaml'
                }
            }
        }
    }
}
